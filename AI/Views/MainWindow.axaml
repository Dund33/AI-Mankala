<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="AI">

    <Design.DataContext>
        <vm:MankalaViewModel />
    </Design.DataContext>

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ColumnDefinitions="4*, 1*, 1*, 1*, 1*, 1*, 1*, 4*" RowDefinitions="1*,1*">
        <Button Name="B1" Command="{Binding OnClickCommand}" CommandParameter="B1" Grid.Row="0" Grid.Column="1" Content="{Binding State[0][0]}" />
        <Button Name="B2" Command="{Binding OnClickCommand}" CommandParameter="B2" Grid.Row="0" Grid.Column="2" Content="{Binding State[1][0]}" />
        <Button Name="B3" Command="{Binding OnClickCommand}" CommandParameter="B3" Grid.Row="0" Grid.Column="3" Content="{Binding State[2][0]}" />
        <Button Name="B4" Command="{Binding OnClickCommand}" CommandParameter="B4" Grid.Row="0" Grid.Column="4" Content="{Binding State[3][0]}" />
        <Button Name="B5" Command="{Binding OnClickCommand}" CommandParameter="B5" Grid.Row="0" Grid.Column="5" Content="{Binding State[4][0]}" />
        <Button Name="B6" Command="{Binding OnClickCommand}" CommandParameter="B6" Grid.Row="0" Grid.Column="6" Content="{Binding State[5][0]}" />
        <Button Name="B7" Command="{Binding OnClickCommand}" CommandParameter="B7" Grid.Row="1" Grid.Column="1" Content="{Binding State[0][1]}" />
        <Button Name="B8" Command="{Binding OnClickCommand}" CommandParameter="B8" Grid.Row="1" Grid.Column="2" Content="{Binding State[1][1]}" />
        <Button Name="B9" Command="{Binding OnClickCommand}" CommandParameter="B9" Grid.Row="1" Grid.Column="3" Content="{Binding State[2][1]}" />
        <Button Name="B10" Command="{Binding OnClickCommand}" CommandParameter="B10" Grid.Row="1" Grid.Column="4" Content="{Binding State[3][1]}" />
        <Button Name="B11" Command="{Binding OnClickCommand}" CommandParameter="B11" Grid.Row="1" Grid.Column="5" Content="{Binding State[4][1]}" />
        <Button Name="B12" Command="{Binding OnClickCommand}" CommandParameter="B12" Grid.Row="1" Grid.Column="6" Content="{Binding State[5][1]}" />
    </Grid>

</Window>